    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#43874c" android:endColor="#356b3c"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#4e9c58" android:endColor="#43874c"
                      android:angle="270"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
